<div class="panel panel-default">
  <!-- Table -->
  <table class="table">
    <thead>
      <tr>
        <th>From</th>
        <th>Amount</th>
        <th>Type</th>
        <th>Comments</th>    
        <th>Time</th>            
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.where(recipient_id: current_user.id).each do |transaction| %>
        <tr>
          <td><%= transaction.user.first_name + ' ' + transaction.user.last_name %></td>
          <td><%= transaction.amount %></td>
          <td><%= transaction.tag %></td>
          <td><%= transaction.comment %></td>
          <td><%= transaction.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="panel-footer"><p style="text-align: right; font-weight: bold">Total: <%= @transactions.where(recipient_id: current_user.id).sum(:amount) %> pts</p></div>
</div>
