<div class="panel panel-default">
  <!-- Table -->
  <table class="table">
    <thead>
      <tr>
        <th>To</th>
        <th>Amount</th>
        <th>Type</th>
        <th>Comments</th>
        <th>Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% current_user.transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.recipient.first_name + ' ' + transaction.recipient.last_name %></td>
          <td><%= transaction.amount %></td>
          <td><%= transaction.tag %></td>
          <td><%= transaction.comment %></td>
          <td><%= transaction.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="panel-footer"><p style="text-align: right; font-weight: bold">Total: <%= current_user.transactions.sum(:amount) %> pts</p></div>
</div>
